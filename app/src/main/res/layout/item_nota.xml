<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/border_item">

    <TextView
        android:id="@+id/tituloItemNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Título de la Nota"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="5dp"/>

    <TextView
        android:id="@+id/contenidoItemNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Contenido de la nota..."
        android:textSize="16sp"
        android:paddingBottom="5dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/contenidoCompletoItemNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Contenido completo de la nota..."
        android:textSize="16sp"
        android:paddingBottom="5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tiempoItemNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Fecha y Hora"
        android:textSize="14sp"
        android:textColor="#888888"/>

    <TextView
        android:id="@+id/btn_ver_mas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver más"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingTop="3dp"/>
</LinearLayout>
