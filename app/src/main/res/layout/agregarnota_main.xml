<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f4f4f4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="35dp">

        <ImageButton
            android:id="@+id/btn_regresar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Regresar"
            android:src="@drawable/flecha_agregarnota"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/tv_titulo_nota_principal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:text="Agregar Nota"
            android:textColor="#3F51B5"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginRight="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/et_titulo_nota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título de la nota"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_contenido_nota"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:gravity="top"
            android:hint="Escribe tu nota aquí..."
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_agregar_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Fotografía"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF4081"
            android:textSize="16sp"
            android:elevation="4dp"
            android:layout_marginEnd="30dp"/>

        <Button
            android:id="@+id/btn_guardar_nota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar nota"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3F51B5"
            android:textSize="16sp"
            android:elevation="4dp"/>
    </LinearLayout>

</LinearLayout>
